[selectedDocument]\"\r\n          :key=\"imgIndex\"\r\n          @click=\"selectImage(selectedDocument, imgIndex)\"\r\n          :class=\"{ active: selectedImages[selectedDocument] === imgIndex }\"\r\n        >\r\n          {{ imageLabels[selectedDocument][imgIndex] }}\r\n        </button>\r\n      </div>\r\n\r\n      <div class=\"image-preview\">\r\n        <img\r\n          :src=\"images[selectedDocument][selectedImages[selectedDocument]]\"\r\n          alt=\"Diagram preview\"\r\n        />\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      documents: [\"Document 1\", \"Document 2\", \"Document 3\"],\r\n      selectedDocument: null,\r\n      selectedImages: [0, 0, 0],\r\n      images: [\r\n        [\r\n          \"/images/ActiviteitenDiagramTheKembitTimes.png\",\r\n          \"/images/ClassDiagramExample.png\",\r\n          \"/images/AnotherDiagram1.png\",\r\n          \"/images/AnotherDiagram2.png\",\r\n        ],\r\n        [\r\n          \"/images/DataschemaERDExample.png\",\r\n          \"/images/UseCaseDiagramExample.png\",\r\n          \"/images/AnotherDiagram3.png\",\r\n          \"/images/AnotherDiagram4.png\",\r\n        ],\r\n        [\r\n          \"/images/MockupExample.png\",\r\n          \"/images/AnotherDiagram.png\",\r\n          \"/images/AnotherDiagram5.png\",\r\n          \"/images/AnotherDiagram6.png\",\r\n        ],\r\n      ],\r\n      imageLabels: [\r\n        [\"Activiteiten diagram\", \"Class diagram\", \"Diagram 3\", \"Diagram 4\"],\r\n        [\"Dataschema (ERD)\", \"Use case diagram\", \"Diagram 3\", \"Diagram 4\"],\r\n        [\"Mock-up\", \"Navigatie schema\", \"Diagram 3\", \"Diagram 4\"],\r\n      ],\r\n    };\r\n  },\r\n  methods: {\r\n    selectDocument(index) {\r\n      this.selectedDocument = index;\r\n    },\r\n    selectImage(docIndex, imgIndex) {\r\n      this.selectedImages[docIndex] = imgIndex;\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style