\",\r\n      ],\r\n      [\r\n        \"/images/DataschemaERDExample.png\",\r\n        \"/images/UseCaseDiagramExample.png\",\r\n        \"/images/ExtraImage3.png\",\r\n        \"/images/ExtraImage4.png\",\r\n      ],\r\n      [\r\n        \"/images/MockupExample.png\",\r\n        \"/images/AnotherDiagram.png\",\r\n        \"/images/ExtraImage5.png\",\r\n        \"/images/ExtraImage6.png\",\r\n      ],\r\n    ];\r\n\r\n    function toggleDropdown(key) {\r\n      dropdowns[key] = !dropdowns[key];\r\n      // reset afbeelding als dropdown sluit\r\n      if (!dropdowns[key]) selectedImages[key] = null;\r\n    }\r\n\r\n    function selectImage(docIndex, imgIndex) {\r\n      selectedImages[docIndex] = imgIndex;\r\n    }\r\n\r\n    function getImageName(path) {\r\n      const parts = path.split(\"/\");\r\n      const filename = parts[parts.length - 1];\r\n      return filename.replace(/\\.[^/.]+$/, \"\");\r\n    }\r\n\r\n    // Init selectedImages per document\r\n    documents.forEach((_, i) => {\r\n      selectedImages[i] = null;\r\n      dropdowns[i] = false;\r\n    });\r\n\r\n    return {\r\n      documents,\r\n      images,\r\n      dropdowns,\r\n      selectedImages,\r\n      toggleDropdown,\r\n      selectImage,\r\n      getImageName,\r\n    };\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.documenten-blok-breed {\r\n  display: flex;\r\n  gap: 20px;\r\n  background-color: #471f29;\r\n  padding: 40px 0;\r\n  align-items: flex-start;\r\n  box-sizing: border-box;\r\n}\r\n\r\n.documenten-blok-breed iframe {\r\n  width: 600px;\r\n  height: 600px;\r\n  border-radius: 8px;\r\n  border: none;\r\n  background: white;\r\n  flex-shrink: 0;\r\n}\r\n\r\n.sidebar {\r\n  width: 180px;\r\n  display: flex;\r\n  flex-direction: column;\r\n  color: white;\r\n  user-select: none;\r\n}\r\n\r\n.dropdown-button {\r\n  background-color: #7a3f50;\r\n  border: none;\r\n  border-radius: 5px;\r\n  padding: 10px 15px;\r\n  color: #ffd6e0;\r\n  font-weight: bold;\r\n  cursor: pointer;\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n}\r\n\r\n.dropdown-button:hover {\r\n  background-color: #90515f;\r\n}\r\n\r\n.dropdown-content {\r\n  margin-top: 15px;\r\n  background-color: #3e1e26;\r\n  border-radius: 8px;\r\n  padding: 10px;\r\n  box-sizing: border-box;\r\n}\r\n\r\n.image-buttons {\r\n  display: flex;\r\n  flex-direction: column;\r\n  gap: 10px;\r\n  margin-bottom: 15px;\r\n}\r\n\r\n.img-name-button {\r\n  background-color: #6a2e3c;\r\n  border: none;\r\n  border-radius: 4px;\r\n  padding: 8px 12px;\r\n  color: #ffd6e0;\r\n  cursor: pointer;\r\n  text-align: left;\r\n  font-size: 0.9rem;\r\n  transition: background-color 0.3s;\r\n}\r\n\r\n.img-name-button:hover {\r\n  background-color: #90515f;\r\n}\r\n\r\n.img-name-button.active {\r\n  background-color: #bb7091;\r\n  font-weight: bold;\r\n}\r\n\r\n.selected-image img {\r\n  width: 100%;\r\n  height: auto;\r\n  border-radius: 6px;\r\n  box-shadow: 0 0 15px rgba(255, 202, 212, 0.8);\r\n  object-fit: contain;\r\n}\r\n\r\n.img-caption {\r\n  margin-top: 8px;\r\n  text-align: center;\r\n  font-weight: 600;\r\n  font-size: 1rem;\r\n  color: #ffd6e0;\r\n}\r\n</style>\r\n"],"mappings":"AA0CA,SAASA,QAAO,QAAS,KAAK;AAE9B,eAAe;EACbC,IAAI,EAAE,SAAS;EACfC,KAAKA,CAAA,EAAG;IACN,MAAMC,SAAQ,GAAIH,QAAQ,CAAC,CAAC,CAAC,CAAC;IAC9B,MAAMI,cAAa,GAAIJ,QAAQ,CAAC,CAAC,CAAC,CAAC;IAEnC,MAAMK,SAAQ,GAAI,CAChB,0CAA0C,EAC1C,0CAA0C,EAC1C,0CAA0C,CAC3C;IAED,MAAMC,MAAK,GAAI,CACb,CACE,+CAA+C,EAC/C,iCAAiC,EACjC,yBAAyB,EACzB,yBAAyB,CAC1B,EACD,CACE,kCAAkC,EAClC,mCAAmC,EACnC,yBAAyB,EACzB,yBAAyB,CAC1B,EACD,CACE,2BAA2B,EAC3B,4BAA4B,EAC5B,yBAAyB,EACzB,yBAAyB,CAC1B,CACF;IAED,SAASC,cAAcA,CAACC,GAAG,EAAE;MAC3BL,SAAS,CAACK,GAAG,IAAI,CAACL,SAAS,CAACK,GAAG,CAAC;MAChC;MACA,IAAI,CAACL,SAAS,CAACK,GAAG,CAAC,EAAEJ,cAAc,CAACI,GAAG,IAAI,IAAI;IACjD;IAEA,SAASC,WAAWA,CAACC,QAAQ,EAAEC,QAAQ,EAAE;MACvCP,cAAc,CAACM,QAAQ,IAAIC,QAAQ;IACrC;IAEA,SAASC,YAAYA,CAACC,IAAI,EAAE;MAC1B,MAAMC,KAAI,GAAID,IAAI,CAACE,KAAK,CAAC,GAAG,CAAC;MAC